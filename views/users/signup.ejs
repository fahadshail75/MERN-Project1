<% layout('layouts/boilerplate') %>
<body>
    <div class="row">
        <div class="col-6 offset-3 mt-2 mb-2">
            <h1>Signup on WanderLust</h1>
            <form method="POST" action="/signup" novalidate class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">UserName</label>
                    <input
                        name="username"
                        placeholder="Enter your username"
                        type="text"
                        class="form-control"
                        required
                    />
                    <div class="valid-feedback">username looks good!</div>
                    <div class="invalid-feedback">Please enter a username.</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input
                        name="email"
                        placeholder="Enter your email"
                        type="email"
                        class="form-control"
                        required
                    />
                    <div class="valid-feedback">Email looks good!</div>
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>
                <div class="  mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input
                        name="password"
                        placeholder="Enter your password"
                        type="password"
                        class="form-control"
                        required
                    />
                    <div class="valid-feedback">Password looks good!</div>
                    <div class="invalid-feedback">Please enter a password.</div>
                </div>
                    <button type="submit" class="btn btn-success ">signup</button>
            </form>
        </div>
    </div>

</body>